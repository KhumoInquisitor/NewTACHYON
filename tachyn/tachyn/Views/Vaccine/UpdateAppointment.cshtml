
@{
    ViewData["Title"] = "Update Appointment";
    Layout = "~/Views/Shared/_MainLayout2.cshtml";

}
@model Appointment
<br />
<div class="text-center">
    <h3>Booking An Appointment</h3>
</div>
<br />
<br />

<div class="card">
    <form method="post" asp-action="UpdateAppointment1">
        <div class="card-header text-center">
            <h5>Update appointment</h5>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <div class="mb-3 row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Name" type="text" class="form-control">
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
            </div>
            <br />
            <div>
                <div class="mb-3 row">
                    <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Surname" type="text" class="form-control">
                    </div>
                    <span asp-validation-for="Surname" class="text-danger"></span>

                </div>
            </div>
            <br />
            <div>
                <div class="mb-3 row">
                    <label asp-for="IDNumber" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="IDNumber" type="email" class="form-control">
                    </div>
                    <span asp-validation-for="IDNumber" class="text-danger"></span>

                </div>
            </div>
            <br />
            <div>
                <div class="mb-3 row">
                    <label asp-for="Date" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Date" type="date" class="form-control">
                    </div>
                    <span asp-validation-for="Date" class="text-danger"></span>

                </div>
            </div>
            <br />
            <div>
                <div class="mb-3 row">
                    <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="PhoneNumber" type="text" class="form-control">
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                </div>
            </div>
            <br />
            <div>
                <div class="mb-3 row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" type="email" class="form-control">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
            </div>
            <br />
            
            <input asp-for="Status" value="Pending" hidden/>
            <input asp-for="AppointmentId" hidden/>
        </div>
        <div class="card-footer text-center">
            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
                <div class="col-md-4">
                    <form method="post" asp-action="DeleteAppointment">
                        <input name="AppointmentID" hidden value="@Model.AppointmentId" />
                        <button type="submit" class="btn btn-danger">Delete</button>

                    </form>
                </div>
            </div>
        </div>
    </form>
    
</div>

