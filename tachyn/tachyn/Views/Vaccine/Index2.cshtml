@if (User.IsInRole("Admin"))
{

    <style>
        #dash-con {
            background: hsla(120, 60%, 70%, 0.3);
            box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
            backdrop-filter: blur( 0px );
            -webkit-backdrop-filter: blur( 0px );
            border-radius: 10px;
            border: 1px solid rgba( 255, 255, 255, 0.18 );
        }

            #dash-con:hover {
                background: hsla(120, 60%, 70%, 0.3);
                box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
                backdrop-filter: blur( 20px );
                -webkit-backdrop-filter: blur( 20px );
                border-radius: 10px;
                border: 1px solid rgba( 255, 255, 255, 0.18 );
            }
    </style>
    <h1>Admin Welcome <span class="text-danger">E</span><span class="text-info">-NOMPILE</span> <bold></bold></h1>
    <div class="container-fluid pt-4 px-4">

        <div class="row g-4">
            <div class=" col-sm-6 col-xl-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <div id="dash-con" class="dash-con rounded d-flex align-items-center justify-content-between p-4">
                    @* <img src="~/Image/App.png" style="width: 79px" />*@
                    <div class="ms-3">
                        <a a asp-controller="Family" asp-action="PreventationTypeList">
                            <h4 class="mb-2">Birth_controls<span class="badge bg-white rounded-pill text-primary"></span></h4>
                        </a>
                    </div>
                </div>
            </div>


            <div class=" col-sm-6 col-xl-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <div id="dash-con" class="dash-con rounded d-flex align-items-center justify-content-between p-4">
                    @* <img src="~/Image/App.png" style="width: 79px" />*@
                    <div class="ms-3">
                        <a a asp-controller="Family" asp-action="ScreeningList">
                            <h4 class="mb-2">Screening<span class="badge bg-white rounded-pill text-primary"></span></h4>
                        </a>
                    </div>
                </div>
            </div>


            <div class="col-sm-6 col-xl-3" data-bs-toggle="modal" data-bs-target="#exampleModal1">
                <div id="dash-con" class=" dash-con rounded d-flex align-items-center justify-content-between p-4">
                    @* <img src="~/Image/Alerts.png" style="width: 95px" />*@
                    <div class="ms-3">
                        <a a asp-controller="Family" asp-action="TrackMenstruatioList">
                            <h4 class="mb-2">Track-Cycle</h4>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3" data-bs-toggle="modal" data-bs-target="#exampleModal1">
                <div id="dash-con" class="dash-con rounded d-flex align-items-center justify-content-between p-4">

                    <div class="ms-3">
                        <a a asp-controller="Family" asp-action="FeedBackList">
                            <h4 class="mb-2">Feedback</h4>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row row-cols-1 row-cols-md-2 g-2">
        <div class="col">
            <div class="card mb-3" style="max-width: 800px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/css/FamilyPlanning.jfif" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">methods of contraception:</h5>
                            <p class="card-text">
                                long-acting reversible contraception - the implant or intra uterine device (IUD)
                                hormonal contraception - the pill or the Depo Provera injection.
                                barrier methods - condoms.
                                emergency contraception.
                                fertility awareness.
                                permanent contraception - vasectomy and tubal ligation.
                            </p>
                            <p class="card-text"><small class="text-muted"></small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card mb-3" style="max-width: 800px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/css/FamilyPlanning2.png" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">How long does family planning take in the body?</h5>
                            <p class="card-text">
                                -The time it takes for birth control to start working depends on the method.
                                -Barrier methods, such as condoms, are effective at once, while a vasectomy can take 3 months or longer.
                                -Barrier methods, such as condoms, work immediately when used correctly,
                                while birth control pills may take several days to start working.
                            </p>
                            <p class="card-text"><small class="text-muted"></small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

}
