@model Tachyon.Models.walkincheckboxes;
@{
    ViewData["Title"] = "Screening";
}
<body id="screen">
    <br />
    <br />
    <br />
    <h1 id="Walkheading">Self Screening</h1>
    <br />
    <form asp-controller="Walkin" asp-action="Ticking" method="post">
        <div id="content">
            <label>Do you have a cough?</label>
            <input asp-for="cough" type="checkbox" name="cough" /><br />
            <label>Do you have a loss of smell or taste?</label>
            <input asp-for="smell" type="checkbox" name="smell" /><br />
            <label> Do you have a shortness of breath?</label>
            <input asp-for="breath" type="checkbox" name="breath" /><br />
            <label> Do you have a headache?</label>
            <input asp-for="head" type="checkbox" name="head" /><br />
            <label>
                Have you , or anyone you have been close contact with,
                been diagnosed with COVID-19 or placed in quarantine
                for possible exposure to COVID-19?
            </label>
            <input asp-for="covid" type="checkbox" name="covid" /><br />

        </div>
        <br />
        <br />
        <button id="btnsub" class="bg-primary" type="submit">Submit</button>
    </form>
    <br />
    <a asp-controller="Walkin" asp-action="Index"><button id="button1" class="btn-danger">Back</button></a>

</body>

