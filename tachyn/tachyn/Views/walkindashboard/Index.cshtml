@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/walkinLayout.cshtml";
}
<style>
    #dash-con {
        background: rgba( 0, 255, 255, 0.75 );
        box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
        backdrop-filter: blur( 0px );
        -webkit-backdrop-filter: blur( 0px );
        border-radius: 10px;
        border: 1px solid rgba( 255, 255, 255, 0.18 );
    }

        #dash-con:hover {
            background: rgba( 0, 255, 0, 0.3 );
            box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
            backdrop-filter: blur( 20px );
            -webkit-backdrop-filter: blur( 20px );
            border-radius: 10px;
            border: 1px solid rgba( 255, 255, 255, 0.18 );
        }
</style>
<h1>Welcome <span class="text-primary"></span><span class="text-success"></span> <bold>PATIENTS</bold></h1>

<div class="container-fluid pt-4 px-4">

    <div class="row g-4">
        <div class=" col-sm-6 col-xl-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
            <div id="dash-con" class="dash-con rounded d-flex align-items-center justify-content-between p-4">
                <img src="~/css/medicalfile.png" style="width: 79px" />
                <div class="ms-3">
                    <h4 class="mb-2">Manage File<span class="badge bg-primary rounded-pill text-white"></span></h4>

                </div>
            </div>
        </div>


        <div class="col-sm-6 col-xl-3" data-bs-toggle="modal" data-bs-target="#exampleModal1">
            <div id="dash-con" class="dash-con rounded d-flex align-items-center justify-content-between p-4">
                <img src="~/css/calender.png" style="width: 79px" />
                <div class="ms-3">
                    <h4 class="mb-2">Booking</h4>

                </div>
            </div>
        </div>


        <div class="col-sm-6 col-xl-3" data-bs-toggle="modal" data-bs-target="#exampleModal1">
            <div id="dash-con" class=" dash-con rounded d-flex align-items-center justify-content-between p-4">
                <img src="~/css/selfscreen.png" style="width: 79px" />
                <div class="ms-3">
                    <h4 class="mb-2">Screening</h4>

                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3" data-bs-toggle="modal" data-bs-target="#exampleModal1">
            <div id="dash-con" class="dash-con rounded d-flex align-items-center justify-content-between p-4">
                <img src="~/css/Practitioner.png" style="width: 79px" />
                <div class="ms-3">
                    <h4 class="mb-2">Doctors</h4>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid pt-4 px-4">
    <div class="AssessmentTable text-center rounded p-4" id="AssessmentTable">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">My Appointments</h6>
            <a href="@Url.Action("Progress_Report","Reports")" class="button">Generate Report</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">

                <thead class="table-primary">
                    <tr>
                        <th>Appointment Date</th>
                        <th>Appointment Time</th>
                        <th>Department</th>
                        <th>Doctor Information</th>
                        <th>Screening Status</th>


                    </tr>
                </thead>
                <tbody>

                    <tr>
