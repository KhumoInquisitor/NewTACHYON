@model Tachyon.Models.TrackMenstruation
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutFamily.cshtml";
}
<div class="mt-2 p-2 bg-primary text-center text-white rounded">
    <h6>TRACK-MENSTRUATION</h6>

</div>
<form method="post" asp-action="CreateTrackMenstruation" class=" form-horizontal bg-green-300  p-2 text-dark bg-opacity-20">
    <div class=" border border-primary border-5 p-3">
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
       
        <div class=" form-group">
            <label asp-for="CurrentDate"></label>
            <div col-sm-5>
                <input asp-for="CurrentDate" class=" form-control" id="validationName" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="CurrentDate" class=" text-danger"></span>
        </div>
        <div class=" form-group">
            <label asp-for="LastPeriodDate"></label>
            <div col-sm-10>
                <input asp-for="LastPeriodDate" class=" form-control" id="validationRace" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="LastPeriodDate" class=" text-danger"></span>

        </div>

    

    <div class=" form-group row">
        <div class=" col-8 offset-2 row">
            <div class=" col">
                <input type="submit" class="btn-primary btn-lg  " value="submit" />
            </div>
            <div class=" col-1">
                <a asp-action="TrackMenstruactioList" class=" btn btn-primary btn-lg ">List</a>
            </div>
        </div>
    </div>

    </div>


</form>
