@model IEnumerable<Tachyon.Models.FamilyReferrals>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/LayoutFamily.cshtml";
    }
    <div class="container p-3 bg-blue-200 p-2 text-dark bg-opacity-50">
        <img src="~/css/images.jpg" class="rounded float-end">
        <div class=" row pt-4">
            <div class=" col-10">
                <h2 class="text-primary"> Referrals List</h2>
            </div>
            <div class=" col-10 text-right">
                <a asp-controller="Family" asp-action="CreateFamilyReferrals" style="width:100%"></a>
            </div>
        </div>

        <br />
        <a asp-controller="Family" asp-action="Index" class="btn btn-success">Back</a>
        @if (Model.Count() > 0)
        {
            <table class=" table table-bordered table-striped table-success">
                <thead>
                    <tr>
                        <th>Patient</th>

                        <th>Discription</th>


                        <th>NurseName</th>
                        <th>ReferralName</th>

                        <th>Date</th>



                    </tr>
                </thead>
                <tbody>
                    @foreach (var familyPrescription in Model)
                    {

                        <tr>
                            <td>@familyPrescription.ID</td>

                            <td>@familyPrescription.Description</td>
                            <td>@familyPrescription.NurseName</td>
                            <td>@familyPrescription.ReferralName</td>
                            <td>@familyPrescription.Date</td>


                        </tr>



                    }

                </tbody>
            </table>
        }
        else
        {
            <p>NO prescription has been created</p>
        }


    </div>

