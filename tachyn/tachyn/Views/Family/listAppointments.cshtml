@model IEnumerable<Tachyon.Models.FamilyAppointment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutFamily.cshtml";
}
<div class="container p-3 bg-blue-200 p-2 text-dark  bg-blue-200 bg-opacity-50">
    <img src="~/css/images.jpg" class="rounded float-end">
    <div class=" row pt-4">
        <div class=" col-10">
            <h2 class="text-primary">Appointment List</h2>
        </div>
        <div class=" col-10 text-right">
            <a asp-controller="Family" asp-action="CreateAppointment" style="width:100%"></a>
        </div>
    </div>

    <br />
    <a asp-action="CreateAppointment" class="btn btn-success"> add  a new appointment</a>
    @if (Model.Count() > 0)
    {
        <table class=" table table-bordered table-striped table-success">
            <thead>
                <tr>
                    <th>Description</th>

                    <th>NurseName</th>


                    <th>CurrentDateDate</th>

                    <th>AppointmentDate</th>

                    
                    <th>Edit</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var familyAppointment in Model)
                {

                    <tr>
                        <td >@familyAppointment.Description</td>

                        <td >@familyAppointment.NurseName</td>
                        <td >@familyAppointment.CurrentDate</td>
                        <td >@familyAppointment.AppointmentDate</td>
                       
                        <td>
                            <div class=" w-100 btn-group" role="group">
                                <a asp-controller="Family" asp-action="updateAppointment" asp-route-ID="@familyAppointment.AppointmentID" class=" btn btn-blue-300 mx-1">Update</a>
                               
                                <a asp-controller="Family" asp-action="DeleteAppointment" asp-route-ID="@familyAppointment.AppointmentID" class=" btn btn-blue-300 mx-1">Delete</a>
                                

                            </div>

                        </td>

                    </tr>



                }

            </tbody>
        </table>
    }
    else
    {
        <p>NO Appontment has been created</p>
    }


</div>