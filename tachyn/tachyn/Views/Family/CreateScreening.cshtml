@model Tachyon.Models.FamilyScrenning
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutFamily.cshtml";
}
<div class="mt-2 p-2 bg-primary text-center text-white rounded">
    <h6>SCREENING</h6>

</div>
<form method="post" asp-action="CreateScreening" class=" form-horizontal   bg-green-300  p-2 text-dark bg-opacity-20 align-text-center">
    <div class=" border border-primary border-5 p-3">
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
       
        <div class=" form-group">
            <label asp-for="Period"></label>
            <div col-sm-5>
                <select id="DescriptionDropdown" asp-for="Period" class=" form-control" id="validationName" required>
                    <option value="yes">Yes</option>
                    <option value="no">No</option>
                    

                </select>
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="Period" class=" text-danger"></span>
        </div>
        <div class=" form-group">
            <label asp-for="Child"></label>
            <div col-sm-10>
                <select id="DescriptionDropdown" asp-for="Child" class=" form-control" id="validationName" required>
                    <option value="yes">Yes</option>
                    <option value="no">No</option>


                </select>
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="Child" class=" text-danger"></span>

        </div>
        <div class=" form-group">
            <label asp-for="intercourse"></label>
            <div col-sm-10>
                <select id="DescriptionDropdown" asp-for="intercourse" class=" form-control" id="validationName" required>
                    <option value="yes">Yes</option>
                    <option value="no">No</option>


                </select>
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="intercourse" class=" text-danger"></span>

        </div>



        <div class=" form-group row">
            <div class=" col-8 offset-2 row">
                <div class=" col">
                    <input type="submit" class="btn-primary btn-lg  " value="submit" />
                </div>
                <div class=" col-1">
                    <a asp-action="ScreeningList" class=" btn btn-primary btn-lg ">Screenings</a>
                </div>
            </div>
        </div>

</div>
</form>