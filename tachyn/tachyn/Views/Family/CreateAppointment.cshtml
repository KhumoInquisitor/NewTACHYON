@model Tachyon.Models.FamilyAppointment
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutFamily.cshtml";
}
<div class="mt-2 p-2 bg-primary text-center text-white rounded">
    <h6>ADD NEW APPOINTMENT</h6>
   
</div>
<form method="post" asp-action="CreateAppointment" class=" form-horizontal   bg-green-300  p-2 text-dark bg-opacity-20">
    <div class="border border-5" >
    <div class=" border border-5 border-primary p-3 border-width:thin">
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        @*<div class=" form-group row">
            <h2 class=" text-success-50 " > ADD NEW APPOINTMENT</h2>
        </div>*@
        <div class=" form-group border-2 border-success" >
            <label asp-for="Description"></label>
            <div col-md-6 >
                <select id="DescriptionDropdown" asp-for="Description" class=" form-control" id="validationName" required>
                    <option value="Pill">pill</option>
                    <option value="Implant">implant</option>
                    <option value="Injection">Injection</option>
                    <option value="Plan B">Plan B</option>
                    
                </select>
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="Description" class=" text-danger"></span>
        </div>
        <div class=" form-group border-2 border-success" >
            <label asp-for="NurseName"></label>
            <div col-sm>
                <select id="NurseDropdown" asp-for="NurseName" class=" form-control" id="validationName" required>
                    <option value="Miss Buntu"> Miss Buntu</option>
                    <option value="Mr Treat">Mr treat</option>
                    <option value="Miss Lisa">miss lisa</option>
                </select>
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="NurseName" class=" text-danger"></span>
        </div>
        <div class=" form-group border-2 border-success">
            <label asp-for="CurrentDate"></label>
            <div col-sm-7>
                <input asp-for="CurrentDate" class=" form-control" id="validationAge" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="CurrentDate" class=" text-danger"></span>
        </div>
        <div class=" form-group border-2 border-success ">
            <label asp-for="AppointmentDate"></label>
            <div col-sm-7>
                <input asp-for="AppointmentDate" class=" form-control" id="validationAbility" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="AppointmentDate" class=" text-danger"></span>
           @* <div class=" form-group border-2 border-success">
                <label asp-for="Time"></label>
                <div col-sm-7>
                    <input asp-for="Time" class=" form-control" id="validationWeakness" required />
                </div>
                <div class="invalid-feedback">
                </div>
                <span asp-validation-for="Time" class=" text-danger"></span>
            </div>*@
        </div>

        <div class=" form-group row">
            <div class=" col-8 offset-2 row">
                <div class=" col">
                    <input type="submit" class="btn-primary btn-lg  " value="submit" />
                </div>
                <div class=" col-1">
                    <a asp-action="listAppointments" class=" btn btn-primary btn-lg ">Appointments</a>
                </div>
            </div>
        </div>

    </div>

    </div>
</form>

