@model Tachyon.Models.FamilyReferrals
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutFamily.cshtml";
}
<div class="mt-2 p-2 bg-primary text-center text-white rounded">
    <h6>ADD NEW REFERRAL</h6>

</div>
<form method="post" asp-action="CreateFamilyReferrals" class=" form-horizontal bg-green-300 p-2 text-dark bg-opacity-20">
    <div class=" border border-primary border-5 p-3">
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        
        <div class=" form-group">
            <label asp-for="ID"></label>
            <div col-sm-5>
                <select id="ManageFileDropdown" asp-for="ID" class=" form-control" id="validationName" required ></select>
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="ID" class=" text-danger"></span>
        </div>
        <div class=" form-group">
            <label asp-for="Description"></label>
            <div col-sm-10>
                <input asp-for="Description" class=" form-control" id="validationRace" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="Description" class=" text-danger"></span>

        </div>
        <div class=" form-group">
            <label asp-for="NurseName"></label>
            <div col-sm-10>
                 <select id="NurseDropdown" asp-for="NurseName" class=" form-control" id="validationName" required>
                    <option value="select">select</option>
                    <option value="Miss Buntu"> Miss Buntu</option>
                    <option value="Mr Treat">Mr treat</option>
                    <option value="Miss Lisa">miss lisa</option>
                </select>
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="NurseName" class=" text-danger"></span>
        </div>
        <div class=" form-group">
            <label asp-for="ReferralName"></label>
            <div col-sm-10>
                <select id="ReferraleDropdown" asp-for="ReferralName" class=" form-control" id="validationName" required>
                    <option value="select">select</option>
                    <option value="Miss Bruce"> Miss Bruce</option>
                    <option value="Mr Lee">Mr Lee</option>
                    <option value="Miss Phase">miss phase</option>
                </select>
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="ReferralName" class=" text-danger"></span>
        </div>
        <div class=" form-group">
            <label asp-for="Date"></label>
            <div col-sm-10>
                <input asp-for="Date" class=" form-control" id="validationAbility" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="Date" class=" text-danger"></span>
            
        </div>

        <div class=" form-group row">
            <div class=" col-8 offset-2 row">
                <div class=" col">
                    <input type="submit" class="btn-primary btn-lg  " value="submit" />
                </div>
                <div class=" col-1">
                    <a asp-action="ReferralsList" class=" btn btn-primary btn-lg ">List</a>
                </div>
            </div>
        </div>

    </div>


</form>
