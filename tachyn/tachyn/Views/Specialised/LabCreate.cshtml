@model Tachyon.Models.LabTest

@{
    ViewData["Title"] = "LabCreate";
    Layout = "~/Views/Shared/_MainLayout-Special.cshtml";
}

<div>
<h4>Lab Test</h4>
<hr />
<div class="row">
    <div class="col-sm">
        <form class="row g-3" asp-action="LabCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">
                <label class="control-label">Name</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label class="control-label">Last Name</label>
                <input asp-for="lastname" class="form-control" />
                <span asp-validation-for="lastname" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label class="control-label">Date Of Birth</label>
                <input asp-for="dob" class="form-control" />
                <span asp-validation-for="dob" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label class="control-label">Age</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label class="control-label">Gender</label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label class="control-label">Date</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label class="control-label">physician</label>
                <input asp-for="physician" class="form-control" />
                <span asp-validation-for="physician" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label class="control-label">Test Name</label>
                <input asp-for="testName" class="form-control" />
                <span asp-validation-for="testName" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label class="control-label">Results</label>
                <input asp-for="results" class="form-control" />
                <span asp-validation-for="results" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label class="control-label">Interpretation</label>
                <input asp-for="interpretation" class="form-control" />
                <span asp-validation-for="interpretation" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                    <label class="control-label">Recommendations</label>
                <input asp-for="recommendations" class="form-control" />
                <span asp-validation-for="recommendations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="LabIndex">Back to List</a>
</div>
</div>
