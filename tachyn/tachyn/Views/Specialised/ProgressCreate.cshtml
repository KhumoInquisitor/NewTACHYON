@model Tachyon.Models.PatientProgress

@{
    ViewData["Title"] = "ProgressCreate";
    Layout = "~/Views/Shared/_MainLayout-Special.cshtml";
}

<div>
<h4>Patient Progress</h4>
<hr />
<div class="row">
        <div class="col-sm">
            <form class="row g-3" asp-action="ProgressCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6">
                    <label class="control-label">Name</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
                <div class="col-md-2">
                    <label class="control-label">Last Name</label>
                <input asp-for="lastname" class="form-control" />
                <span asp-validation-for="lastname" class="text-danger"></span>
            </div>
                <div class="col-md-2">
                    <label class="control-label">Age</label>
                <input asp-for="age" class="form-control" />
                <span asp-validation-for="age" class="text-danger"></span>
            </div>
                <div class="col-md-2">
                    <label class="control-label">Room</label>
                <input asp-for="room" class="form-control" />
                <span asp-validation-for="room" class="text-danger"></span>
            </div>
                <div class="col-md-2">
                    <label class="control-label">Day</label>
                <input asp-for="Day" class="form-control" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
                <div class="col-md-5">
                    <label class="control-label">Breakfast</label>
                <input asp-for="Breakfast" class="form-control" />
                <span asp-validation-for="Breakfast" class="text-danger"></span>
            </div>
                <div class="col-md-5">
                    <label class="control-label">Lunch</label>
                <input asp-for="Lunch" class="form-control" />
                <span asp-validation-for="Lunch" class="text-danger"></span>
            </div>
                <div class="col-md-5">
                    <label class="control-label">Dinner</label>
                <input asp-for="Dinner" class="form-control" />
                <span asp-validation-for="Dinner" class="text-danger"></span>
            </div>
                <div class="col-md-5">
                    <label class="control-label">Snacks</label>
                <input asp-for="Snacks" class="form-control" />
                <span asp-validation-for="Snacks" class="text-danger"></span>
            </div>

                <div class="col-md-3">
                    <label class=" control-label">Weight</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
                <div class="col-md-3">
                    <label class="control-label">Fluid Balance</label>
                <input asp-for="FluidBalance" class="form-control" />
                <span asp-validation-for="FluidBalance" class="text-danger"></span>
            </div>
                <div class="col-md-3">
                    <label class="control-label">Intake</label>
                <input asp-for="Intake" class="form-control" />
                <span asp-validation-for="Intake" class="text-danger"></span>
            </div>
                <div class="col-md-3">
                    <label class="control-label">Output</label>
                <input asp-for="Output" class="form-control" />
                <span asp-validation-for="Output" class="text-danger"></span>
            </div>
                <div class="col-md-3">
                    <label class="control-label">Temperature</label>
                <input asp-for="Temperature" class="form-control" />
                <span asp-validation-for="Temperature" class="text-danger"></span>
            </div>
                <div class="col-md-3">
                    <label class="control-label">Blood Pressure</label>
                <input asp-for="BloodPressure" class="form-control" />
                <span asp-validation-for="BloodPressure" class="text-danger"></span>
            </div>
                <div class="col-md-3">
                    <label class="control-label">Heart Rate</label>
                <input asp-for="HeartRate" class="form-control" />
                <span asp-validation-for="HeartRate" class="text-danger"></span>
            </div>
                <div class="col-md-5">
                    <label class="control-label">Transfusion</label>
                <input asp-for="Transfusion" class="form-control" />
                <span asp-validation-for="Transfusion" class="text-danger"></span>
            </div>
                <<div class="col-md-5">
                    <label class="control-label">Antibiotic Treatment</label>
                <input asp-for="AntibioticTreatment" class="form-control" />
                <span asp-validation-for="AntibioticTreatment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProcedureIndex">Back to List</a>
</div>
</div>

