@model IEnumerable<Tachyon.Models.Collection>

<div class="container p-4">
    <div class="row pt-5">
        <div class="col-6">
            <h2 class="text-center text-capitalize" style="color:darkmagenta"> Collection List  </h2>
        </div>

    </div>

    <br>

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table-info  table-bordered table-active" style="width:100%">
                <thead>
                    <tr>
                        <th>Order Number</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Date of Birth</th>
                        <th>Medication Name</th>
                        <th>Collected</th>
                        <th>Quality</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Collect in Model)
                    {
                        <tr>
                            <td width="10%"> @Collect.FirstName </td>
                            <td width="20%">@Collect.lastName </td>
                            <td width="30%"> @Collect.OrderNo </td>
                            <td width="10%"> @Collect.MedicationName</td>
                            <td width="10%"> @Collect.Quantity</td>
                            <td width="10%"> @Collect.DateOfBirth</td>
                            <td width="10%"> @Collect.Collected</td>

                        </tr>
                 @*   <td>
                        <div class="btn-group">
                            <a asp-controller="Chronic" asp-action="Update" asp-route-ID="@filling.PatientName" class="btn btn-primary mx-1">Update</a>
                    </td>*@
                        @* <a asp-controller="Fighters" asp-action="Delete" asp-route-ID="@fighter.ID" class="btn btn-danger mx-1">Delete</a>*@




                    }
            </tbody>


            </table>
        }
        else
        {
            <p class="text-danger">No colled medication </p>

        }



        <div class="btn">
            <a asp-controller="Chronic" asp-action="CollectMed" class=" btn btn-success mx-1">Create</a>
        </div>

    </div>

</div>




