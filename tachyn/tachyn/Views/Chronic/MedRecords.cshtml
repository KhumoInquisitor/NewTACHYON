@model Tachyon.Models.MedicationRecords
@{
    ViewData["Title"] = "Records";
    Layout = "~/Views/Shared/_Layoutchronic.cshtml";

}


<form method="post" asp-action="MedRecords" class=" form-horizontal bg-blue-200 p-2 text-dark bg-opacity-80" max-width:800px; margin:50px auto;>
    <div class=" border border-dark p-3">
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        <div class="col-lg-4 right mt-lg-0 mt-4">
            <img src="/css/poisoning-pill-bottle.jpg" alt="" width="560" />
        </div>
       <div class="mt-2 p-2 bg-primary text-center text-white rounded">
            <h6>Medication Records</h6>

    </div>
        <div class=" form-group">
            <label asp-for="ExpiryDate"></label>
            <div col-sm-5>
                <input asp-for="ExpiryDate" class=" form-control" id="validationName" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="ExpiryDate" class=" text-danger"></span>
        </div>
        <div class=" form-group">
            <label asp-for="NameOfMedication"></label>
            <div col-sm-10>
                <input asp-for="NameOfMedication" class=" form-control" id="validationRace" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="NameOfMedication" class=" text-danger"></span>

        </div>
        <div class=" form-group">
            <label asp-for="OrderedDate"></label>
            <div col-sm-10>
                <input asp-for="OrderedDate" class=" form-control" id="validationRace" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="OrderedDate" class=" text-danger"></span>

        </div>
        
        <div class=" form-group">
            <label asp-for="Description"></label>
            <div col-sm-10>
                <input asp-for="Description" class=" form-control" id="validationAbility" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <div class=" form-group">
                <label asp-for="Purpose"></label>
                <div col-sm-10>
                    <input asp-for="Purpose" class=" form-control" id="validationAbility" required />
                </div>
                <div class="invalid-feedback">
                </div>

  
    <div class=" form-group row">
        <div class=" col-8 offset-2 row">
            <div class=" col">
                <input type="submit" class="btn-blue-300 btn-lg  " value="create" />
            </div>
            <div class=" col-1">
                            <a asp-action="MedicationIndex" class="btn btn-danger">RecordsList</a>
            </div>
        </div>
    </div>

</form>

 


