@model IEnumerable<Tachyon.Models.FillingPrescription>

 <div class="container p-4">
        <div class="row pt-5">
            <div class="col-6">
                <h2 class="text-center text-capitalize" style="color:darkmagenta"> Presciption List</h2> 
            </div>
           
        </div>
     
        <br>

        <div>

        @if (Model.Count()>0)
        {
            <table class="table-info  table-bordered table-active" style="width:100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Patient Name</th>
                        <th>Drugs</th>
                        <th>Date of Birth</th>
                        <th>Dosage</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var filling in Model)
                    { <tr>
                        <td width="10%"> @filling.PatientName </td>
                        <td width="20%">@filling.DrugsName </td>
                        <td width="30%"> @filling.DateOfBirth </td>
                        <td width="10%"> @filling.Dosage </td>
                        </tr>
                        <td> 
                           <div class="btn-group">
                            <a asp-controller="Chronic" asp-action="Fillupdate" asp-route-ID="@filling.PatientName" class="btn btn-primary mx-1">Update</a>
                            </td>
                           @* <a asp-controller="Fighters" asp-action="Delete" asp-route-ID="@fighter.ID" class="btn btn-danger mx-1">Delete</a>*@
                           
                        
                       

                    }
                 </tbody>


            </table>
        }
        else
        {
            <p class="text-danger">No filled prescription</p>

        }
        
               

          <div class="btn">
                <a asp-controller="Chronic" asp-action="Fillmed" class=" btn btn-success mx-1">Create</a>
          </div>

        </div> 

    </div>




