@model Tachyon.Models.Collection
@{
    ViewData["Title"] = "Collect";
	Layout = "~/Views/Shared/_Layoutchronic.cshtml";
}

<form method="post" asp-action="CollectMed" class=" form-horizontal bg-blue-200 p-2 text-dark bg-opacity-80" max-width:800px; margin:50px auto;>
    <div class=" border border-dark p-3">
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        <div class="col-lg-4 right mt-lg-0 mt-4">
            <img src="/css/collect.jpg" alt="" width="560" />
        </div>
       <div class="mt-2 p-2 bg-primary text-center text-white rounded">
            <h6>Collect Form</h6>

    </div>
        <div class=" form-group">
            <label asp-for="FirstName"></label>
            <div col-sm-5>
                <input asp-for="FirstName" class=" form-control" id="validationName" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="FirstName" class=" text-danger"></span>
        </div>
        <div class=" form-group">
            <label asp-for="lastName"></label>
            <div col-sm-10>
                <input asp-for="lastName" class=" form-control" id="validationRace" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="lastName" class=" text-danger"></span>

        </div>
        <div class=" form-group">
            <label asp-for="DateOfBirth"></label>
            <div col-sm-10>
                <input asp-for="DateOfBirth" class=" form-control" id="validationRace" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="DateOfBirth" class=" text-danger"></span>

        </div>
        <div class=" form-group">
            <label asp-for="OrderNo"></label>
            <div col-sm-10>
                <input asp-for="OrderNo" class=" form-control" id="validationRace" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="OrderNo" class=" text-danger"></span>

        </div>
        <div class=" form-group">
            <label asp-for="MedicationName"></label>
            <div col-sm-10>
                <input asp-for="MedicationName" class=" form-control" id="validationRace" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="MedicationName" class=" text-danger"></span>

        </div>
        <div class=" form-group">
            <label asp-for="Quantity"></label>
            <div col-sm-10>
                <input asp-for="Quantity" class=" form-control" id="validationRace" required />
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="Quantity" class=" text-danger"></span>

        </div>
        <div class=" form-group">
            <label asp-for="Collected"></label>
            <div col-sm-10>
                <select id="GenderDropdown" asp-for="Collected" class=" form-control" id="validationName" required>
                    <option value="Collect"> Collected</option>
                    <option value="Not Collect">Not Collect</option>
                    
                </select>
            </div>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="Collected" class=" text-danger"></span>
        </div>
        <div class=" form-group row">
            <div class=" col-8 offset-2 row">
                <div class=" col">
                    <input type="submit" class="btn-blue-300 btn-lg  " value="create" />
                </div>
                <div class=" col-1">
                    <a asp-action="CollectionIndex" class="btn btn-danger">RecordsList</a>
                </div>
            </div>
        </div>
       

       
</form>
			